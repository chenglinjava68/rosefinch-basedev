    <select id="getConfigCodeByInsert" parameterType="java.lang.String"
        resultType="java.lang.String">
        SELECT CONFIG_CODE
        FROM T_SIGN_SITE_TIME
        WHERE CONFIG_CODE = #{configCode , jdbcType=VARCHAR}
        and del_flag=0
    </select>
    <select id="getConfigNameByInsert" parameterType="java.lang.String"
        resultType="java.lang.String">
        SELECT 
        CONFIG_NAME
        FROM T_SIGN_SITE_TIME
        WHERE CONFIG_NAME = #{configName , jdbcType=VARCHAR}
        and del_flag=0
      
    </select>
        
   <select id="getConfigNameByInsert2" parameterType="hashmap"
        resultType="int">
        SELECT 
        count(1)
        CONFIG_NAME
        FROM T_SIGN_SITE_TIME
        WHERE CONFIG_NAME = #{configName , jdbcType=VARCHAR}
        and config_code != #{configCode}
        and del_flag=0
        
    </select>
    <update id="openBlFlagById" parameterType="long">
        update
        T_SIGN_SITE_TIME T set T.BL_FLAG=1,
        T.MODIFY_TIME=sysdate
        where T.id = #{id}
        
    </update>
    <update id="closeBlFlagById" parameterType="long">
        update
        T_SIGN_SITE_TIME T set T.BL_FLAG=0,
        T.MODIFY_TIME=sysdate
        where T.id = #{id}
    </update>
    <!-- 逻辑删除 -->
    <update id="logicalDeleteById" parameterType="long">
        update T_SIGN_SITE_TIME t set t.del_flag=1 where ID = #{id}
    </update>
   <!--  批量删除 -->
    <update id="batchDeleteStoreSendTimeByIdValue" parameterType="java.util.Map">
    update  T_SIGN_SITE_TIME t   
    set t.del_flag = 1 
      where id in
        <foreach collection="ids" item="item" open="("
            separator="," close=")">
            #{item}
        </foreach>
        and t.del_flag = 0
    </update>
